<h2><%= t('users.sessions.new.title') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, t('users.sessions.new.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('users.sessions.new.password') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('users.sessions.new.remember_me') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('users.sessions.new.log_in') %>
  </div>
<% end %>

<%= render "users/shared/links" %>
